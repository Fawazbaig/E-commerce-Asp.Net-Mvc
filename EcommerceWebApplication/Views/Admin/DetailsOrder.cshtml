@model IEnumerable<EcommerceWebApplication.Models.orderDetailsTable>

@{
    ViewBag.Title = "DetailsOrder";
}
<div class="container mt-5">
    <table class="table table-striped">
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Price
            </th>
            <th> Date Of Order</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.productName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pricePerProduct)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dateOfOrder)
                </td>
            </tr>
        }
        <tr>
            <th>Total</th>
            <th>
                @{
                    var total = 0;
                    foreach (var item in Model)
                    {
                        total = item.totalOrderPrice;

                    }
                    @total
                }
            </th>
            <th></th>
        </tr>

    </table>
</div>