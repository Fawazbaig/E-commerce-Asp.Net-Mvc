@model IEnumerable<EcommerceWebApplication.Models.UserTable>

@{
    ViewBag.Title = "UserList";
}


<div class="container mt-5">
    <h2>User List</h2>
    <table class="table table-striped">
        <tr>
            <th>
                <h5>User Id</h5>
            </th>
            <th>
                <h5>Name</h5>
            </th>
            <th>
                <h5>Email</h5>
            </th>
            <th>
                <h5>Phone</h5>
            </th>
            <th>
                <h5>Age</h5>
            </th>
            <th>
                <h5>Address</h5>
            </th>

            <th>
                <h5>Action</h5>
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.userId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.userName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.address)
                </td>

                <td>
                    @Html.ActionLink("Edit", "EditUser", new { id = item.userId},new { @class = "btn btn-info col-md-5" }) |
                    @Html.ActionLink("Delete", "DeleteUser", new { id = item.userId }, new { @class = "btn btn-danger col-md-5" })
                </td>
            </tr>
        }

    </table>
</div>