@model EcommerceWebApplication.Models.ViewModel.ProductDetailsModel
@{
    ViewBag.Title = "AdDetail";

}

<div class="container">
    <div class="row container d-flex" id="box">
        <div class="col-md-6" style="padding-top:3%;padding-left:3% ">
            @if (Convert.ToInt32(Session["us_id"]) == Convert.ToInt32(Model.ProductUSerId))
            {
                <div class="container">
                    <div class="row d-flex ">
                        <h3><b>Name :</b> @Model.productName</h3>
                    </div>
                    <br />
                    <div class="row d-flex ">
                        <h5><b>Category :</b> @Model.categoryName</h5>
                    </div>
                    <br />
                    <div class="row d-flex" style="height: 180px; overflow:hidden; ">
                        <img src="@Url.Content(@Model.productIamgePath)" style="width: 100%;height: 100%;border-radius: 10%;" />
                    </div>
                    <br />
                    <div class="row d-flex">
                        <h3><b>Price :</b> @Model.price</h3>
                    </div>
                    @if (Convert.ToInt32(Session["us_id"]) == Convert.ToInt32(Model.ProductUSerId))
                    {
                        <div class="row d-flex mb-2 mt-2">
                            @Html.ActionLink("Delete Post", "Delete", "Home", new { id = Model.ProductId }, new { @class = "btn btn-danger col-md-10" })
                        </div>
                        <div class="row d-flex mb-2">
                            @Html.ActionLink("Edit Post", "Edit", "Home", new { id = Model.ProductId }, new { @class = "btn btn-warning col-md-10" })
                        </div>

                    }

                </div>
            }
            @if (Convert.ToInt32(Session["us_id"]) != Convert.ToInt32(Model.ProductUSerId))
            {
                <div class="container">
                    <div class="row d-flex ">
                        <h3><b>Name :</b> @Model.productName</h3>
                    </div>
                    <br />
                    <div class="row d-flex ">
                        <h5><b>Category :</b> @Model.categoryName</h5>
                    </div>
                    <br />
                    <div class="row d-flex" style="height:180px;overflow:hidden;">
                        <img src="@Url.Content(@Model.productIamgePath)" style="width: 100%; height: 100%; border-radius: 10%;" />
                    </div>
                    <br />
                    <div class="row d-flex">
                        <h3><b>Price :</b> @Model.price</h3>
                    </div>
                    <br />
                    <div class="row d-flex mb-2 mt-3">
                        @Html.ActionLink("Add To Cart", "Cart", "Home", new { id =Model.ProductId,name=Model.productName,price=Model.price }, new { @class = "btn btn-info col-md-12" })
                    </div>

                </div>
            }
        </div>
        <div class="col-md-6">
            <div class="container mt-2  " style="padding-top:1%;padding-right:3%; ">
                <div class="container">
                    <div class="row d-flex" >
                        <h3><b>Description :</b></h3>
                    </div>
                    <div class="row d-flex" style="width:100%;height:70px; overflow:auto;">
                        <h5>@Model.Description</h5>
                    </div>
                    <br />
                    <div class="row d-flex">
                        <h3><b>Owner :</b> @Model.UserName</h3>
                    </div>
                    <br />
                    <div class="row d-flex">
                        <h3><b>Contact</b></h3>
                        <h3 class=" mt-2">Email :</h3><h4> @Model.email</h4>
                    </div>
                    <div class="row d-flex mt-1">
                        <h3>Phone : </h3><h4>@Model.PhoneNo</h4>
                    </div>
                  
                    @if (Convert.ToInt32(Session["us_id"]) != Convert.ToInt32(Model.ProductUSerId))
                    {
                        <div class="row d-flex" style=" margin-top: 0.3rem;">
                            @Html.ActionLink("Back", "Category", "Admin", new { id = Model.ProductId }, new { @class = "btn btn-secondary col-md-12" })
                        </div>

                    }
                    @if (Convert.ToInt32(Session["us_id"]) == Convert.ToInt32(Model.ProductUSerId))
                    {

                        <div class="row d-flex" style=" margin-top: 0.3rem;">
                            @Html.ActionLink("Back", "Category", "Admin", new { id = Model.ProductId }, new { @class = "btn btn-secondary col-md-12" })
                        </div>

                    }

                </div>
            </div>
        </div>
    </div>
</div>

<style>
    #box {
        display: flex;
        height: 500px;
        width: 800px;
        border: 1px solid;
        margin: auto;
        margin-top: 50px;
        box-shadow: 10px 10px 20px #000000;
    }


</style>