@model EcommerceWebApplication.Models.ViewModel.CartModel

@{
    ViewBag.Title = "CartView";

}
<div class="container mt-4">
    @if (Model.isNoData == 1)
    {
        <table class="table table-striped mt-3" id="table">
            <tr>
                @*<th>
                        @Html.DisplayNameFor(model => model.fkProductId)
                    </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.productName)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.price)
                </th>

                <th>Action</th>
            </tr>

            @foreach (var item in Model.listData)
            {
                <tr>

                    @*<td>
                            @Html.DisplayFor(modelItem => item.fkProductId)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.productName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.price)
                    </td>

                    <td>
                        @Html.ActionLink("Remove", "DeleteCart", "Home", new { id = item.fkProductId }, new { @class = "btn btn-danger col-md-5" })
                    </td>
                </tr>
            }
            <tr style="background-color:antiquewhite">

                <td id="Val" style="display:flex; justify-content:end;">
                    <h4>Total--></h4>
                </td>
                <td>
                    @{
                        var result = 0;
                        foreach (var item in Model.listData)
                        {
                            result = result + Convert.ToInt32(item.price);

                        }
                        <h5>@result</h5>
                    }

                </td>
                <td>
                    @Html.ActionLink("Order", "Order", "Home", new { total = result }, new { @class = "btn btn-success col-md-10" })
                </td>
            </tr>
        </table>
    }
    else
    {
        <div class="row" style="height:400px;">
            <h3 style="display: flex; align-items:center; justify-content: center;">No Product Added To Cart</h3>
        </div>
    }
</div>
