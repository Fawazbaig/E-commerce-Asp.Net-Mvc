@model IEnumerable<EcommerceWebApplication.Models.orderDetailsTable>

@{
    ViewBag.Title = "OrderDetails";
}
<div class="container">
    <table class="table table-striped mt-5">
        <tr>

            <th>
                Product Name
            </th>
            <th>
                Price
            </th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.productName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pricePerProduct)
                </td>
            </tr>
        }
        <tr>
            <th>Total</th>
            <th>
                @{
                    var total = 0;
                    foreach (var item in Model)
                    {
                        total = item.totalOrderPrice;

                    }
                    @total
                }
            </th>
        </tr>
    </table>
</div>