<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Ecommerce", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            @if (Session["us_id"] != null)
            {
                var name = Session["us_name"].ToString();
                <p style="color:white; display:flex;padding-top:20px;"><small>User : @name</small></p>
            }
            @if (Session["Ad_id"] != null)
            {
                var a_name = Session["Ad_Name"].ToString();
                <p style="color:white; display:flex;padding-top:20px;"><small>Admin: @a_name</small></p>
            }
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1" style="display:flex;justify-content:end;">
                    <li>@Html.ActionLink("Home", "Index", "home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Category", "Category", "Admin", new { area = "" }, new { @class = "nav-link" })</li>
                    @if (Session["Ad_id"] != null)
                    {
                        <li>@Html.ActionLink("Create Category", "CreateCategory", "Admin", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Users List", "UserList", "Admin", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Orders", "AdminOrders", "Admin", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                    @if (Session["Ad_id"] != null)
                    {
                        <li>@Html.ActionLink("Sign Out", "Signout", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                    else
                    {
                        if (Session["us_id"] != null)
                        {
                            <li>@Html.ActionLink("Post An Ad", "PostAd", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                        }
                        if (Session["us_id"] == null)
                        {
                            <li>@Html.ActionLink("Sign In", "SignIn", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Sign Up", "Signup", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                        }
                        if (Session["us_id"] != null)
                        {
                            <li>@Html.ActionLink("Cart", "CartView", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Orders", "OrderView", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Sign Out", "Signout", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                        }
                    }
                </ul>

            </div>
        </div>
    </nav>
    <div class="container-fluid" style="padding:0;">
        @RenderBody()
        <br />
        <footer class="footerStyle">
            <p>&copy; @DateTime.Now.Year - Ecommerce Web Application</p>
        </footer>
    </div>
    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <style>
        .footerStyle {
           
            border-top:2px solid #303030;
            width:100%;
        }
    </style>
</body>
</html>
